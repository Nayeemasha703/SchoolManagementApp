<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="asha.md_nayeem.schoolmanagement">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".StartActivity"
            android:theme="@style/Theme.AppCompat.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity" />
        <activity android:name=".RegisterActivity" />
        <activity android:name=".LoginActivity" />
        <activity android:name=".AdminActivity" />
        <activity android:name=".UserTeacherActivity" />
        <activity android:name=".UserStudentActivity" />
        <activity android:name=".AddTeacherInfoActivity" />
        <activity android:name=".TeachersViewActivity" />
        <activity android:name=".AddRoutineActivity" />
        <activity android:name=".RoutineViewActivity" />
        <activity android:name=".AddNoticeActivity" />
        <activity android:name=".NoticeViewActivity" />
        <activity android:name=".AddResultActivity" />
        <activity android:name=".ResultViewActivity" />
        <activity android:name=".AddAdmissionActivity" />
        <activity android:name=".AdmissionViewActivity" />
        <activity android:name=".AddStudentInfoActivity" />
        <activity android:name=".StudentsViewActivity" />
        <activity android:name=".AddEventActivity" />
        <activity android:name=".EventViewActivity" />
        <activity android:name=".AddTeacherBoardActivity" />
        <activity android:name=".TeacherBoardViewActivity" />
        <activity android:name=".ComplaintViewActivity" />
        <activity android:name=".StuComplaneViewActivity" />
        <activity android:name=".TeacherVerifiActivity" />
        <activity android:name=".PermissionActivity" />
        <activity android:name=".SingaleGpaActivity" />
        <activity android:name=".AgeCalculatorActivity"/>

        <service android:name=".Notification.MyFirebaseMessagingService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>

    </application>

</manifest>