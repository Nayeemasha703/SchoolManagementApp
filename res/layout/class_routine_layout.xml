<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:background="@drawable/input_design"
    android:layout_margin="3dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/class_routine_image_id"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:src="@drawable/about"/>

    <TextView
        android:id="@+id/class_routine_title_id"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="Routine"
        android:textSize="30dp"
        android:textAlignment="center"/>

    <TextView
        android:id="@+id/class_routine_description_id"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Routine Descriptions "
        android:textSize="20dp"
        android:textAlignment="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/class_routine_date_Id"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/class_routine_time_Id"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="time"
            android:gravity="end"
            android:layout_height="match_parent" />

    </LinearLayout>

</LinearLayout>