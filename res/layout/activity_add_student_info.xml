<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="10"
    tools:context=".AddStudentInfoActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.2"
        android:textSize="22sp"
        android:layout_marginTop="10dp"
        android:paddingTop="10dp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:text="Fill all the file and press add Button"/>

    <EditText
        android:id="@+id/add_students_name_id"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:paddingLeft="20dp"
        android:inputType="text"
        android:textSize="20sp"
        android:layout_weight="1.2"
        android:hint="Enter the Name of the Students"
        android:background="@drawable/input_design"/>

    <EditText
        android:id="@+id/add_students_email_id"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:inputType="textEmailAddress"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:paddingLeft="20dp"
        android:textSize="20sp"
        android:layout_weight="1.2"
        android:hint="Enter the Email Account Students"
        android:background="@drawable/input_design"/>

    <EditText
        android:id="@+id/add_students_number_id"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:inputType="number"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:paddingLeft="20dp"
        android:textSize="20sp"
        android:layout_weight="1.2"
        android:hint="Enter the Number of the Students"
        android:background="@drawable/input_design"/>

    <EditText
        android:id="@+id/add_students_title_id"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:inputType="text"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:paddingLeft="20dp"
        android:textSize="20sp"
        android:layout_weight="1.2"
        android:hint="Enter the Title of the Students"
        android:background="@drawable/input_design"/>

    <Button
        android:id="@+id/add_students_button_id"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_gravity="center"
        android:textSize="20sp"
        android:layout_weight="1.2"
        android:text="Submit"
        android:background="@drawable/input_design"/>

</LinearLayout>